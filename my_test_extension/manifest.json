{
    "name": "My Chrome Extension",
    "version": "1.0",
    "manifest_version": 2,
    "description": "This extension is running the Python code.",

    "browser_action": 
    {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },

    "storage": {
        "language": "es",
        "name": "Spanish",
        "enabled": true
    },

    "content_scripts": [ {
       "run_at": "document_end",
       "css": [ 
            "css/main.css",
            "css/popup.css"
       ],
       "js":[
           "lib/jquery/jquery.min.js",
           "js/popup.js"
       ],
       "matches": [ "<all_urls>", "http://*/*", "https://*/*" ]
    } ],

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "tabs",
        "debugger",
        "storage"
    ]
}
